<p id="notice"><%= notice %></p>
<% if current_user %>
<h1>Tus Tweets</h1>
</br>

<table class="table">
  <thead>
    <tr>
      <th>Email</th>
      <th>Mensaje</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
   
    <% Tweet.where(:email=>"#{current_user.email}").each do |tweet| %>
      <tr>
        <td><%= tweet.email %></td>
        <td><%= tweet.mensaje %></td>
        <td><%= link_to 'Ver', tweet, :class =>"btn btn-success" %></td>
        <td><%= link_to 'Editar', edit_tweet_path(tweet), :class =>"btn btn-primary" %></td>
        <td><%= link_to 'Eliminar', tweet, method: :delete, :class =>"btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <%end%>
      <%= link_to 'Nuevo Tweet', new_tweet_path, :class =>"btn btn-primary"%>

    <% end %>
  </tbody>
</table>

<br>

</br>
